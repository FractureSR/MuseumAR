/* miniprogram/pages/StorePage/StorePage.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}



.store_view{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  border: 1rpx #e9eaec solid;
  border-radius: 30rpx;
}
.img_view{
  display: flex;
  width: 340rpx;
  height: 340rpx;
}
.text_view{
  display: flex;
  flex-direction: column;
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx;
}