
  .talks {
    position: absolute; 
    height: 900rpx;
    width: 100%;
    bottom: 0rpx;
    }
    .talk-header {
    width: 100%;
    height: 70rpx; 
    padding-top: 30rpx;
    text-align: center;
    }  
    .talk-body {
    height: 400rpx;
    }
    /* 顶部元素 */
    .talk-count {
    font-size: 26rpx;
    height: 40rpx;
    color: #0a0a0a;
    }
    /* 中部元素 */
    .talk-item {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 100%;
    color: rgb(10, 10, 10);
    }
    
  .talk-item-left {
    display: flex; 
    flex-direction: row;
    margin: 20rpx 30rpx;  
    }
    
    .talk-item-face {  
    width: 80rpx; 
    height: 80rpx; 
    border-radius: 50%;
    }
    .talk-item-right { 
    width: 100%;
    border-bottom: solid 1rpx #6a6869;
    margin-right: 30rpx; 
    /* margin-bottom: 30rpx; */
    padding-bottom: 20rpx; 
    }
    .right-left { 
    display: flex; 
    justify-content: space-between;   
    align-items: center; 
    margin: 10px 0;
    }
    .talk-item-nickname {
    font-size: 28rpx;
    color: #aaa8a9;
     
    }
    .talk-item-time {
    font-size: 24rpx;  
    color: #6a6869;
    }
    .talk-item-content {  
    display: block; 
    font-size: 30rpx; 
    margin-right: 30rpx;  
    width: 92%;
    white-space: pre-line; 
    word-break: break-all; 
    word-wrap: break-word；; 
    }
    /* 底部元素 */
    .talk-input {
    width: 100%; 
    font-size: 30rpx;  
    padding: 20rpx 0; 
    padding-left: 30rpx;  
    /* box-sizing: border-box; */  
    color: rgb(8, 7, 7); 
    border-top-left-radius: 5%; 
    border-top-right-radius: 5%;  
    }
    .fabu-input {
     
    background: rgb(31, 12, 12);
    font-size: 26rpx;
    color: #fff;
    width: 127rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx; 
    padding: 0;
    }
    .delete{
      background: rgb(228, 18, 18);
      font-size: 26rpx;
      color: #fff;
      width: 30rpx;
      height: 30rpx;
      line-height: 30rpx;
      text-align: center;
      border-radius: 30rpx; 
      padding: 0
    }
  
  
  /*图片*/
  .img_box{
    width:690rpx;
    position:relative;
    display: flex;
    flex-wrap: wrap;
    margin:0 auto;
  }
  .imgs{
    width:33.33333333%;
    display: flex;
    justify-content: center;
    margin-bottom:20rpx;
  }
  .imgs image{
    width:90%;
    max-height:212rpx;
    border:1px solid rgba(214, 212, 212, 0.1);
    /* box-shadow: 5rpx 5rpx 1rpx 3rpx #e2e0e0; */
  }
  .imgs .images{
    position:relative;
  }
  .images button{
    width:100%;
    height:100%;
    position:absolute;
    bottom:0;
    left:0;
  }
  .img_box .images{
    width:90%;
    height: 212rpx;
    border:1px solid #E8E8E8;
    border-radius:4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .img_box .images>image{
    width:60rpx;
    height:60rpx;
  }
  .title{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}